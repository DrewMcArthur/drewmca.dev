<div class="section-headers">
  <a href="#section-wrapper-about" class="section-header about active">About</a>
  <a href="#section-wrapper-links" class="section-header links">Contact</a>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navLinks = document.querySelectorAll(".section-header");
    
    // Handle mobile menu closing
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        // Close sidebar on mobile
        const sidebar = document.querySelector(".sidebar");
        const menuButton = document.querySelector(".menu-button");
        if (window.innerWidth <= 768) {
          sidebar?.classList.remove("show");
          menuButton?.classList.remove("active");
        }
      });
    });
    
    // Basic active state on click
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        navLinks.forEach(l => l.classList.remove("active"));
        link.classList.add("active");
      });
    });
  });
</script>
